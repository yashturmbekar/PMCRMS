{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "BaseUrl": "${APP_BASE_URL}",
    "FrontendUrl": "${FRONTEND_URL}",
    "OtpExpiryMinutes": 5,
    "LoginOtpExpiryMinutes": 5,
    "TokenExpiryHours": 24,
    "DocumentTokenExpiryHours": 48,
    "DocumentOtpExpiryMinutes": 30,
    "MaxDailyOtpRequests": 3,
    "MaxFailedAttempts": 5,
    "AccountLockDurationMinutes": 30,
    "PaymentDueDays": 30,
    "CertificateValidityYears": 3,
    "EscalationThresholdDays": 3,
    "DefaultReportDateRangeMonths": 1,
    "InvitationExpiryDays": 7,
    "ReportingWeekDays": 7,
    "ReportingMonthDays": 30,
    "EmailTimeoutSeconds": 15,
    "CertificatePrice": 3000
  },
  "TimeZoneSettings": {
    "IstOffsetHours": 5,
    "IstOffsetMinutes": 30,
    "TimeZoneId": "India Standard Time"
  },
  "RetrySettings": {
    "MaxRetryAttempts": 3,
    "RetryDelayMilliseconds": 2000
  },
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_URL}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "PMCRMS.API",
    "Audience": "PMCRMS.Client",
    "ExpiryHours": 24
  },
  "EmailSettings": {
    "SmtpHost": "smtp-relay.sendinblue.com",
    "SmtpPort": 587,
    "Username": "${EMAIL_USERNAME}",
    "Password": "${EMAIL_PASSWORD}",
    "FromEmail": "${EMAIL_FROM}",
    "FromName": "ezBricks Admin",
    "UseSsl": true,
    "RequiresAuthentication": true,
    "Subject": "Your Secure Login OTP for ezbricks",
    "Body": "Welcome to ezbricks. To ensure a secure login, we've sent you a one-time password (OTP). Please use it to log in to your account <b>{0}</b>"
  },
  "FileUploadSettings": {
    "MaxFileSizeMB": 10,
    "UploadPath": "./uploads",
    "AllowedExtensions": [".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx"]
  },
  "BillDeskSettings": {
    "MerchantId": "${BILLDESK_MERCHANT_ID}",
    "EncryptionKey": "${BILLDESK_ENCRYPTION_KEY}",
    "SigningKey": "${BILLDESK_SIGNING_KEY}",
    "KeyId": "${BILLDESK_KEY_ID}",
    "ClientId": "${BILLDESK_CLIENT_ID}",
    "Environment": "production",
    "PaymentUrl": "https://pay.billdesk.com/web/v1_2/embeddedsdk",
    "SuccessUrl": "${FRONTEND_URL}/payment/success",
    "FailureUrl": "${FRONTEND_URL}/payment/failure"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "${FRONTEND_URL}",
      "https://pmcrms-production.up.railway.app",
      "http://pmcrms-production.up.railway.app"
    ]
  },
  "HSM": {
    "UseTestKeyLabel": true,
    "OtpBaseUrl": "${HSM_OTP_BASE_URL}",
    "SignBaseUrl": "${HSM_SIGN_BASE_URL}",
    "ServiceUrl": "${HSM_SERVICE_URL}",
    "Provider": "${HSM_PROVIDER}",
    "Timeout": "${HSM_TIMEOUT}",
    "TimeoutSeconds": 30,
    "RetryCount": 3,
    "DefaultCoordinates": {
      "X": 100,
      "Y": 700,
      "Width": 200,
      "Height": 50,
      "Page": 1
    },
    "AllowedProviders": ["Sify", "nCode"],
     "SignatureCoordinates": {
        "JuniorEngineer": "50,440,200,480",
        "AssistantEngineer": "350,440,500,480",
        "ExecutiveEngineer": "50,200,200,260",
        "CityEngineer": "350,200,500,260"
    },
    "LicenseCertificateSignatureCoordinates": {
      "ExecutiveEngineer": "97,160,216,100",
      "CityEngineer": "397,160,516,100"
    }
  },
  "AppointmentSettings": {
    "DefaultDurationMinutes": 60,
    "LookaheadDays": 7,
    "ReminderHoursBeforeAppointment": 24
  }
}
