# Database Configuration
DATABASE_URL=Host=localhost;Database=PMCRMS_DB;Username=postgres;Password=your_password_here

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-at-least-32-characters-long
JWT_ISSUER=PMCRMS.API
JWT_AUDIENCE=PMCRMS.Client
JWT_EXPIRY_HOURS=24

# API Configuration
API_BASE_URL=https://localhost:7001
FRONTEND_URL=http://localhost:5173

# Email Configuration (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@pmcrms.gov.in
FROM_NAME=PMCRMS System

# SMS Configuration (for OTP)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=PMCRMS

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads
ALLOWED_FILE_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.doc,.docx

# EaseBuzz Payment Gateway Configuration
EASEBUZZ_MERCHANT_KEY=your-merchant-key
EASEBUZZ_SALT=your-salt
EASEBUZZ_ENV=test
EASEBUZZ_SUCCESS_URL=http://localhost:5173/payment/success
EASEBUZZ_FAILURE_URL=http://localhost:5173/payment/failure

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=./logs/pmcrms-{Date}.log